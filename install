#!/bin/bash

# Installs bin and env from this repository.

rsync -apl env/dot_shell_control "$HOME/.shell_control"
source "$HOME/.shell_control" || echo "$(tput bold)error: ~/.shell_control not installed!$(tput sgr0)" >&2

set -e

( run "pushd bin >/dev/null"; run "./install" )
( run "pushd env >/dev/null"; run "./install" )

show "Install complete!"
