[core]
	excludesfile = ~/.gitignore_global
	whitespace = trailing-space,space-before-tab
	autocrlf = false
[push]
	default = tracking
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path "$MERGED" -- "$LOCAL" "$REMOTE"
[diff]
	prompt = false
	renames = copies
	tool = Kaleidoscope
[mergetool "kaleidoscope"]
	prompt = false
	cmd = ksdiff --merge --output "$MERGED" --base "$BASE" -- "$LOCAL" --snapshot "$REMOTE" --snapshot
	trustExitCode = true
[merge]
	stat = true
	tool = Kaleidoscope
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	s = status -uno
	su = status
	co = checkout
	ci = commit
	ca = commit --amend
	push-topic = !bash git_push_topic
	reauthor = !bash git_reauthor
	name-change = !bash git_name_change
	ltr = !bash git_ltr
	wdiff = diff --color-words --word-diff
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[advice]
	pushNonFastForward = false
[branch]
	autosetuprebase = always
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
