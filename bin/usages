#!/bin/bash

# Prints out usages for ~/bin tools.

for I in *; do
	if [[ "$I" == "macosver" ]]; then
		echo "$I - Prints current OS X version information."
	elif [[ -n "$(file -h $I | grep 'symbolic link to')" ]]; then
		echo "$I - Symbolic link to '$(ls -l $I | sed 's@.* -> \(.*\)@\1@')'"
	else
		echo "$I - $(cat $I | head -n 3 | tail -n 1 | sed 's@[^ ]* \(.*\)@\1@')"
	fi
done
