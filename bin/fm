#!/bin/bash

# Find in CMake files.

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
	echo "usage: ${0##*/} [-h|--help] [grep pattern]" 1>&2
	echo "" 1>&2
	echo "Recursively Finds given pattern within CMake files." 1>&2
	exit 1
fi

find . -name CMakeLists.txt -exec grep -HIin "$@" {} \; 2>/dev/null
