#!/bin/bash

# Captures a window for a screen shot on X11 systems.

if [[ "$1" == "--help" ]]; then
	echo "usage: $0" 1>&2
	echo "Captures a window for a screen shot on X11 systems." 1>&2
	exit 1
fi

set -e

echo -n "click window to capture... "
INFO="$(xwininfo)"
XID="$(echo "$INFO" | grep "Window id" | awk '{print $4}')"
CAPS=~/captures
FILE="$CAPS/$XID.ping"

mkdir -p "$CAPS"
import -window "$XID" "$FILE"
echo "imported to $FILE"

if type eog >/dev/null 2>&1; then
	nohup eog "$FILE" &
fi
